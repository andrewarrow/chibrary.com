.list
  %h1= "#{year}-#{month} " + (list['name'] or slug)

  - if inventory
    %p= "#{inventory[:messages]} messages in #{inventory[:threads]} threads"

%ol.threads
  - threadset.threads.each do |thread|
    %li.thread
      %a{ :id => "t#{thread.first.call_number}", :name => "t#{thread.first.call_number}" }/
      .header
        %span.count= thread.count
        %a.subject{ :href => thread.first.call_number }= Message.normalize_subject thread.first.subject
      = render :partial => 'thread_list', :locals => { :thread => thread }
