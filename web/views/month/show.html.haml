.month
  %h1
    %a{ :href => "/#{@slug}" }= (@list['name'] or @slug)
    = "#{@year}-#{@month}"

  %p= "#{@message_count} messages in #{@threadset.length} threads"

%ol.threads
  - @threadset.each do |thread|
    %li.thread
      %a{ :id => "t-#{thread.call_number.to_base_36}", :name => "t-#{thread.call_number.to_base_36}" }/
      .header
        %span.count= thread.count
        %a.subject{ :href => "/#{@slug}/#{@year}/#{@month}/#{thread.call_number}" }= subject(thread)
      = partial :'month/_thread_list.html', :locals => { :thread => thread }

