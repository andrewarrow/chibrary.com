%section.list
  %h1= @list.title_name

  %table
    %caption Links to monthly archives of this list.
    %thead
      %tr.months
        %td.upper_left
        - 1.upto(12) do |i|
          %td= i
    %tbody
      - @years_of_month_counts.to_a.each do |year, months|
        %tr
          %td.year= year
          - 1.upto(12) do |month|
            - if months.has_key?(month)
              %td.month.small
                %a{ href: "/#{@slug}/#{year}/#{'%02d' % month}" } #{months[month].message_count}:#{months[month].thread_count}
            - else
              %td.empty_month= ''

  - if @list.homepage
    %p
      Homepage:
      %a{ href: @list.homepage }= @list.homepage

  - if @list.description
    = @list.description
