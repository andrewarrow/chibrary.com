RewriteEngine On
RewriteRule \.svn/ . [F,L]

# front page
#RewriteRule ^$ /index [L]

# list
#RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^([a-zA-Z\-]+)$  /$1/ [R]
RewriteRule ^([a-zA-Z\-]+)/$ list.php

# year
#RewriteRule ^([a-zA-Z\-]+)/[0-9][0-9][0-9][0-9]$  /$1/
#RewriteRule ^([a-zA-Z\-]+)/[0-9][0-9][0-9][0-9]/$ /$1/

# month
#RewriteRule ^([a-zA-Z\-]+/[0-9][0-9][0-9][0-9]/[0-9][0-9])$  /$1/
#RewriteRule ^([a-zA-Z\-]+/[0-9][0-9][0-9][0-9]/[0-9][0-9])/$ /$1/index.html


# errors
ErrorDocument 403 /error/403.html
ErrorDocument 404 /error/404.html

# no browsing around
Options -Indexes
# for /about and thread pages, which have no extension
#DefaultType text/html

# performance: gzip everything
AddOutputFilterByType DEFLATE text/css application/x-javascript
