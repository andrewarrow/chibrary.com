.list
  %h1= (@list['name'] or @slug)


  %table{ :summary => "Links to monthly archives of this list" }
    %thead
      %tr.months
        %td.upper_left
        - 1.upto(12) do |i|
          %td= i
    %tbody
      - @year_counts.to_a.each do |year, months|
        %tr
          %td.year= year
          - 1.upto(12) do |i|
            - month = "%02d" % i
            - if months.has_key?(month)
              %td.month.small
                %a{ :href => "/#{@slug}/#{year}/#{month}" }= months[month][:threads].to_s + ':' + months[month][:messages].to_s
            - else
              %td.empty_month= ''

  - if @list['description']
    = @list['description']

  - if @list['homepage']
    %p
      Homepage:
      %a{ :href => @list['homepage'] }= @list['homepage']

